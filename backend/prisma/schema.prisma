generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  code           String   @unique
  category       String
  batches        Batch[]
  createdAt      DateTime @default(now())
}

model Batch {
  id             Int      @id @default(autoincrement())
  code           String
  quantity       Int
  expirationDate DateTime
  productId      Int
  product        Product  @relation(fields: [productId], references: [id])
}